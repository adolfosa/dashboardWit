# Configuración básica
Options -Indexes
DirectoryIndex index.php

# Configuración de CORS
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Permitir CORS preflight
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
    
    # Headers CORS
    Header always set Access-Control-Allow-Origin "http://localhost:5174"
    Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header always set Access-Control-Allow-Credentials "true"
</IfModule>

# Manejar preflight CORS
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Redirecciones para API
RewriteRule ^apis/auth$ apis/auth.php [L]
RewriteRule ^apis/users$ apis/users.php [L]

# Manejo de errores
ErrorDocument 404 /errors/404.json
ErrorDocument 500 /errors/500.json

# Configuración de caché para archivos JSON
<FilesMatch "\.(json)$">
    Header set Cache-Control "no-cache, must-revalidate"
</FilesMatch>

# Seguridad básica
<FilesMatch "\.(php|ini|log)$">
    Deny from all
</FilesMatch>
<FilesMatch "^(auth|users)\.php$">
    Allow from all
</FilesMatch>